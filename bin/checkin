#!/usr/bin/env perl

use Modern::Perl;

use App::Checkin;
my $checkin = App::Checkin->new;

checkin();

sub checkin {
    $checkin->checkin or do {
        say "checkin entry exists, overwrite? [Y/n]";
        chomp (my $input = <STDIN>);
        $checkin->update_checkin
            if $input =~ /^y$/i or $input eq '';
    };
    say 'Checked in at ' . DateTime->now .
        ', Have a good day'
}

